@model UbiquitousLanguageManager.Web.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "パスワード変更";
    Layout = "_Layout";
}

@* TECH-004: 初回ログイン時パスワード変更ページ *@
@* Blazor Server初学者向け: ASP.NET Core MVCとBootstrapを使用したレスポンシブデザイン *@

<div class="min-vh-100 d-flex align-items-center bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <i class="fas fa-key fa-3x text-warning mb-3"></i>
                            <h2 class="h4 text-gray-900 mb-0">パスワード変更</h2>
                            <p class="text-muted">セキュリティ強化のため、新しいパスワードを設定してください</p>
                        </div>

                        @* 初回ログイン時の重要な説明 *@
                        <div class="alert alert-info mb-4" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>初回ログイン</strong><br>
                            管理者が設定した初期パスワードから、あなた専用のパスワードに変更してください。
                        </div>

                        <form asp-action="ChangePassword" asp-controller="Account" method="post">
                            @Html.AntiForgeryToken()
                            
                            @* バリデーションサマリー *@
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>

                            <div class="form-group mb-3">
                                <label asp-for="CurrentPassword" class="form-label">
                                    <i class="fas fa-unlock-alt me-1"></i>
                                    @Html.DisplayNameFor(m => m.CurrentPassword)
                                </label>
                                <input asp-for="CurrentPassword" class="form-control" placeholder="管理者から提供された初期パスワード" autocomplete="current-password" />
                                <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="NewPassword" class="form-label">
                                    <i class="fas fa-lock me-1"></i>
                                    @Html.DisplayNameFor(m => m.NewPassword)
                                </label>
                                <input asp-for="NewPassword" class="form-control" placeholder="新しいパスワードを入力" autocomplete="new-password" />
                                <span asp-validation-for="NewPassword" class="text-danger small"></span>
                                <div class="form-text mt-1">
                                    <small class="text-muted">
                                        <i class="fas fa-shield-alt me-1"></i>
                                        <strong>パスワード要件:</strong> 8文字以上、大文字・小文字・数字・特殊文字(@@$$!%*?&)を含む
                                    </small>
                                </div>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="ConfirmPassword" class="form-label">
                                    <i class="fas fa-lock me-1"></i>
                                    @Html.DisplayNameFor(m => m.ConfirmPassword)
                                </label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="新しいパスワードをもう一度入力" autocomplete="new-password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-warning btn-lg">
                                    <i class="fas fa-key me-1"></i>
                                    パスワードを変更する
                                </button>
                            </div>
                        </form>

                        @* セキュリティ情報 *@
                        <div class="mt-4 pt-4 border-top">
                            <div class="row text-center">
                                <div class="col">
                                    <small class="text-muted">
                                        <i class="fas fa-shield-alt me-1"></i>
                                        セキュアなSSL暗号化通信でパスワードを保護
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @* セキュリティガイド（開発時のみ表示） *@
                @if (ViewContext.HttpContext.Request.Host.Host == "localhost")
                {
                    <div class="card mt-3">
                        <div class="card-body">
                            <h6 class="card-title">
                                <i class="fas fa-info-circle me-1"></i>
                                パスワード設定ガイド
                            </h6>
                            <div class="row">
                                <div class="col-12">
                                    <small class="text-muted">
                                        <strong>推奨例:</strong> MyPassword123!<br>
                                        <strong>避けるべき:</strong> 誕生日、名前、辞書にある単語
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}